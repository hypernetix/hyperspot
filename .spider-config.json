{
  "spiderCorePath": ".spider",
  "spiderAdapterPath": ".spider-adapter",
  "codeScanning": {
    "fileExtensions": [
      ".py",
      ".md",
      ".js",
      ".ts",
      ".tsx",
      ".go",
      ".rs",
      ".java",
      ".cs",
      ".sql"
    ],
    "singleLineComments": [
      "#",
      "//",
      "--"
    ],
    "multiLineComments": [
      {
        "start": "/*",
        "end": "*/"
      },
      {
        "start": "<!--",
        "end": "-->"
      }
    ],
    "blockCommentPrefixes": [
      "*"
    ]
  }
}
