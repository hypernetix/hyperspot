{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "gts://gts.x.llm_gateway.core.response.v1~",
  "title": "Response",
  "description": "LLM Gateway response to consumer",
  "type": "object",
  "properties": {
    "content": {
      "type": "array",
      "items": {
        "$ref": "gts://gts.x.llm_gateway.content.content_part.v1~"
      },
      "description": "Response content parts"
    },
    "tool_calls": {
      "type": "array",
      "items": {
        "$ref": "gts://gts.x.llm_gateway.content.tool_call.v1~"
      },
      "description": "Tool calls requested by the model"
    },
    "usage": {
      "$ref": "gts://gts.x.llm_gateway.core.usage.v1~",
      "description": "Token usage information"
    },
    "fallback_used": {
      "type": "boolean",
      "description": "Whether a fallback model was used"
    },
    "model_used": {
      "type": "string",
      "description": "Actual model that generated the response"
    }
  },
  "required": ["usage", "model_used"],
  "additionalProperties": false
}
