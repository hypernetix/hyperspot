{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "gts://gts.x.llmgw.async.batch.v1~",
  "title": "Batch",
  "description": "Batch request state",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique batch identifier"
    },
    "status": {
      "$ref": "gts://gts.x.llmgw.async.batch_status.v1~",
      "description": "Current batch status"
    },
    "requests": {
      "type": "array",
      "items": {
        "$ref": "gts://gts.x.llmgw.async.batch_request.v1~"
      },
      "minItems": 1,
      "description": "Batch requests"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Batch creation timestamp"
    }
  },
  "required": ["id", "status", "requests", "created_at"],
  "additionalProperties": false
}
