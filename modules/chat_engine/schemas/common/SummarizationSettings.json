{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.common.summarization_settings.v1~",
  "title": "SummarizationSettings",
  "description": "Settings for session summarization requests",
  "type": "object",
  "properties": {
    "max_length": {
      "type": "integer",
      "minimum": 50,
      "maximum": 1000,
      "description": "Maximum length of the summary in words"
    },
    "focus": {
      "type": "string",
      "enum": ["general", "technical", "decisions", "action_items"],
      "description": "Focus area for the summary"
    },
    "include_timestamps": {
      "type": "boolean",
      "description": "Whether to include timestamps in the summary"
    }
  },
  "additionalProperties": true
}
