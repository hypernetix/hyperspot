{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.common.session.v1~",
  "title": "Session",
  "description": "Chat session entity containing conversation context and metadata",
  "type": "object",
  "properties": {
    "session_id": {
      "$ref": "./GtsSessionId.json",
      "description": "Unique session identifier"
    },
    "client_id": {
      "type": "string",
      "minLength": 1,
      "description": "Owner identifier"
    },
    "session_type_id": {
      "$ref": "./GtsSessionTypeId.json",
      "description": "Current session type reference"
    },
    "available_capabilities": {
      "type": "array",
      "items": { "$ref": "./Capability.json" },
      "description": "Capabilities returned by webhook backend on creation"
    },
    "metadata": {
      "type": "object",
      "description": "Optional session metadata (title, tags, custom fields)",
      "additionalProperties": true
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Session creation timestamp",
      "examples": ["2024-01-15T10:30:00Z"]
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last activity timestamp",
      "examples": ["2024-01-15T10:30:00Z"]
    },
    "share_token": {
      "type": ["string", "null"],
      "minLength": 32,
      "description": "Unique token for session sharing"
    }
  },
  "required": ["session_id", "client_id", "session_type_id", "available_capabilities", "created_at", "updated_at"],
  "additionalProperties": false
}
