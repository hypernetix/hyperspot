{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.common.image_content.v1~",
  "title": "ImageContent",
  "description": "Image content part in a message",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "image",
      "description": "Content type discriminator"
    },
    "image_id": {
      "type": "string",
      "format": "uuid",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "UUID of the image file"
    },
    "mime_type": {
      "type": "string",
      "pattern": "^image/",
      "description": "MIME type of the image",
      "examples": ["image/png", "image/jpeg", "image/webp"]
    }
  },
  "required": ["type", "image_id"],
  "additionalProperties": false
}
