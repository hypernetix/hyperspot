{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.common.image_content.v1~",
  "title": "ImageContent",
  "description": "Image content part in a message",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "image",
      "description": "Content type discriminator"
    },
    "image_url": {
      "type": "string",
      "format": "uri",
      "pattern": "^https?://",
      "description": "URL to the image file"
    },
    "mime_type": {
      "type": "string",
      "pattern": "^image/",
      "description": "MIME type of the image",
      "examples": ["image/png", "image/jpeg", "image/webp"]
    }
  },
  "required": ["type", "image_url"],
  "additionalProperties": false
}
