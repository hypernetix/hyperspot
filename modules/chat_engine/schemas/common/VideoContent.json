{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.common.video_content.v1~",
  "title": "VideoContent",
  "description": "Video content part in a message",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "video",
      "description": "Content type discriminator"
    },
    "video_url": {
      "type": "string",
      "format": "uri",
      "pattern": "^https?://",
      "description": "URL to the video file"
    },
    "mime_type": {
      "type": "string",
      "pattern": "^video/",
      "description": "MIME type of the video file",
      "examples": ["video/mp4", "video/webm", "video/ogg"]
    },
    "duration_seconds": {
      "type": "number",
      "minimum": 0,
      "description": "Duration of the video in seconds"
    }
  },
  "required": ["type", "video_url"],
  "additionalProperties": false
}
