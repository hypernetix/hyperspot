{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.common.audio_content.v1~",
  "title": "AudioContent",
  "description": "Audio content part in a message",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "audio",
      "description": "Content type discriminator"
    },
    "audio_url": {
      "type": "string",
      "format": "uri",
      "pattern": "^https?://",
      "description": "URL to the audio file"
    },
    "mime_type": {
      "type": "string",
      "pattern": "^audio/",
      "description": "MIME type of the audio file",
      "examples": ["audio/mpeg", "audio/wav", "audio/ogg"]
    },
    "duration_seconds": {
      "type": "number",
      "minimum": 0,
      "description": "Duration of the audio in seconds"
    }
  },
  "required": ["type", "audio_url"],
  "additionalProperties": false
}
