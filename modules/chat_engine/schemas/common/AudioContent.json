{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.common.audio_content.v1~",
  "title": "AudioContent",
  "description": "Audio content part in a message",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "audio",
      "description": "Content type discriminator"
    },
    "audio_id": {
      "type": "string",
      "format": "uuid",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "UUID of the audio file"
    },
    "mime_type": {
      "type": "string",
      "pattern": "^audio/",
      "description": "MIME type of the audio file",
      "examples": ["audio/mpeg", "audio/wav", "audio/ogg"]
    },
    "duration_seconds": {
      "type": "number",
      "minimum": 0,
      "description": "Duration of the audio in seconds"
    }
  },
  "required": ["type", "audio_id"],
  "additionalProperties": false
}
