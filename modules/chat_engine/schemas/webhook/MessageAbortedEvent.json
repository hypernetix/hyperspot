{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.webhook.message_aborted_event.v1~",
  "title": "MessageAbortedEvent",
  "description": "Webhook event sent when message generation is stopped by user",
  "type": "object",
  "properties": {
    "event": {
      "type": "string",
      "const": "message.aborted",
      "description": "Event type identifier"
    },
    "session_id": {
      "$ref": "../common/GtsSessionId.json"
    },
    "message_id": {
      "$ref": "../common/GtsMessageId.json"
    },
    "partial_content": {
      "type": "array",
      "items": { "$ref": "../common/ContentPart.json" },
      "description": "Partial content generated before abortion"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp",
      "examples": ["2024-01-15T10:30:00Z"]
    }
  },
  "required": ["event", "session_id", "message_id", "partial_content", "timestamp"],
  "additionalProperties": false
}
