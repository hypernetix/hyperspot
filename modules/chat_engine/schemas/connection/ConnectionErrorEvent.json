{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.connection.error_event.v1~",
  "title": "ConnectionErrorEvent",
  "description": "Event emitted when a connection-level error occurs",
  "type": "object",
  "properties": {
    "error_code": {
      "$ref": "../common/ErrorCode.json"
    },
    "message": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable error message"
    },
    "details": {
      "$ref": "../common/ErrorDetails.json",
      "description": "Additional error details (safe for client consumption)"
    }
  },
  "required": ["error_code", "message"],
  "additionalProperties": false
}
