{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.connection.ready_event.v1~",
  "title": "ConnectionReadyEvent",
  "description": "Event emitted when WebSocket connection is established and ready",
  "type": "object",
  "properties": {
    "client_id": {
      "type": "string",
      "minLength": 1,
      "description": "Authenticated client identifier"
    },
    "server_version": {
      "type": "string",
      "minLength": 1,
      "description": "Chat Engine server version",
      "examples": ["1.0.0"]
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "List of server-side capabilities available"
    }
  },
  "required": ["client_id", "server_version", "capabilities"],
  "additionalProperties": false
}
