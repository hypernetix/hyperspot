{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.streaming.error_event.v1~",
  "title": "StreamingErrorEvent",
  "description": "Event emitted when an error occurs during message streaming. Sent via HTTP chunked response as newline-delimited JSON (NDJSON).",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "error",
      "description": "Event type identifier"
    },
    "message_id": {
      "type": "string",
      "format": "uuid",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Message identifier (may be partial)"
    },
    "error_code": {
      "$ref": "../common/ErrorCode.json"
    },
    "message": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable error message"
    }
  },
  "required": ["type", "message_id", "error_code", "message"],
  "additionalProperties": false
}
