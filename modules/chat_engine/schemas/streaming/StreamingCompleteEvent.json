{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.streaming.complete_event.v1~",
  "title": "StreamingCompleteEvent",
  "description": "Event emitted when message streaming completes successfully",
  "type": "object",
  "properties": {
    "request_id": {
      "type": "string",
      "minLength": 1,
      "description": "Request identifier for this streaming operation"
    },
    "message_id": {
      "type": "string",
      "format": "uuid",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Completed message identifier"
    },
    "metadata": {
      "type": "object",
      "description": "Message metadata (usage statistics, etc.)",
      "properties": {
        "usage": {
          "oneOf": [
            { "$ref": "../common/Usage.json" },
            { "type": "null" }
          ]
        }
      },
      "additionalProperties": true
    }
  },
  "required": ["request_id", "message_id"],
  "additionalProperties": false
}
