{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.streaming.start_event.v1~",
  "title": "StreamingStartEvent",
  "description": "Event emitted when message streaming begins",
  "type": "object",
  "properties": {
    "request_id": {
      "type": "string",
      "minLength": 1,
      "description": "Request identifier for this streaming operation"
    },
    "message_id": {
      "type": "string",
      "format": "uuid",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Message identifier being generated"
    }
  },
  "required": ["request_id", "message_id"],
  "additionalProperties": false
}
