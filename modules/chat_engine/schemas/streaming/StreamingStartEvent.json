{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.streaming.start_event.v1~",
  "title": "StreamingStartEvent",
  "description": "Event emitted when message streaming begins. Sent via HTTP chunked response as newline-delimited JSON (NDJSON).",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "start",
      "description": "Event type identifier"
    },
    "message_id": {
      "type": "string",
      "format": "uuid",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Message identifier being generated"
    }
  },
  "required": ["type", "message_id"],
  "additionalProperties": false
}
