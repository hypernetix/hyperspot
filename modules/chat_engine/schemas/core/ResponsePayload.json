{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.core.response_payload.v1~",
  "title": "ResponsePayload",
  "description": "Base payload structure for WebSocket server responses and events",
  "type": "object",
  "properties": {
    "event": {
      "type": "string",
      "minLength": 1,
      "description": "Event type (e.g., 'response.success', 'message.streaming.chunk')",
      "examples": [
        "response.success",
        "response.error",
        "message.streaming.start",
        "message.streaming.chunk",
        "message.streaming.complete",
        "connection.ready"
      ]
    },
    "request_id": {
      "type": ["string", "null"],
      "description": "Request ID this response corresponds to (null for server-initiated events)"
    },
    "payload": {
      "type": "object",
      "description": "Event-specific payload data",
      "additionalProperties": true
    }
  },
  "required": ["event", "payload"],
  "additionalProperties": false
}
