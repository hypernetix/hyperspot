{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.message.stop_response.v1~",
  "title": "MessageStopResponse",
  "description": "Response after stopping a streaming message",
  "type": "object",
  "properties": {
    "stopped": {
      "type": "boolean",
      "const": true,
      "description": "Confirmation that streaming was stopped"
    },
    "partial_message_id": {
      "$ref": "../common/GtsMessageId.json",
      "description": "ID of the partial message saved before stopping"
    }
  },
  "required": ["stopped", "partial_message_id"],
  "additionalProperties": false
}
