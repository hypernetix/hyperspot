{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.message.stop_request.v1~",
  "title": "MessageStopRequest",
  "description": "Request to stop an in-progress streaming message",
  "type": "object",
  "properties": {
    "message_id": {
      "type": "string",
      "format": "uuid",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Message identifier to stop"
    },
    "request_id": {
      "type": "string",
      "minLength": 1,
      "description": "Request identifier to stop"
    }
  },
  "oneOf": [
    { "required": ["message_id"] },
    { "required": ["request_id"] }
  ],
  "additionalProperties": false
}
