{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "gts://gts.x.chat_engine.message.list_request.v1~",
  "title": "MessageListRequest",
  "description": "Request to list messages in a session",
  "type": "object",
  "properties": {
    "session_id": {
      "type": "string",
      "format": "uuid",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Session identifier"
    },
    "parent_message_id": {
      "type": ["string", "null"],
      "format": "uuid",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Filter by parent message ID (for specific branch)"
    }
  },
  "required": ["session_id"],
  "additionalProperties": false
}
