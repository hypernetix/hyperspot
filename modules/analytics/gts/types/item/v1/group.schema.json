  "$id": "gts://gts.hypernetix.hyperspot.ax.item.v1~hypernetix.hyperspot.ax.group.v1~",
  "description": "Group item type for organizing and containing other items. Groups provide visual and logical organization of widgets and nested groups within layouts. They support collapsible sections, allowing users to expand/collapse related content. Groups help create hierarchical dashboard structures.",
  "allOf": [
    {
      "$ref": "gts://gts.hypernetix.hyperspot.ax.item.v1~"
    },
    {
      "type": "object",
      "properties": {
        "settings": {
          "type": "object",
          "description": "Group-specific settings for container behavior and nested items.",
          "properties": {
            "collapsible": {
              "type": "boolean",
              "description": "Whether the group can be collapsed by users. If true, shows collapse/expand controls in the UI."
            },
            "collapsed": {
              "type": "boolean",
              "description": "Initial collapsed state when the layout loads. Only applies if collapsible is true."
            },
            "items": {
              "type": "array",
              "description": "Nested items contained within this group. Can include widgets and nested groups, allowing for hierarchical layout structures. Items are rendered in the order they appear.",
              "items": {
                "$ref": "gts://gts.hypernetix.hyperspot.ax.item.v1~",
                "description": "Child item - can be a widget or another group for nested organization."
              }
            }
          },
          "required": ["items"]
        }
      },
