{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "gts://gts.x.llmgw.content.video_content.v1~",
  "title": "VideoContent",
  "description": "Video content part with FileStorage URL",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "video",
      "description": "Content type discriminator"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "FileStorage URL for the video"
    }
  },
  "required": ["type", "url"],
  "additionalProperties": false
}
