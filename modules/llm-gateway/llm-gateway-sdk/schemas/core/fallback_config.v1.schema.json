{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "gts://gts.x.llmgw.core.fallback_config.v1~",
  "title": "FallbackConfig",
  "description": "Configuration for provider fallback behavior",
  "type": "object",
  "properties": {
    "models": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "description": "Ordered list of fallback model identifiers"
    },
    "strategy": {
      "$ref": "gts://gts.x.llmgw.core.fallback_strategy.v1~",
      "description": "Fallback execution strategy"
    }
  },
  "required": ["models", "strategy"],
  "additionalProperties": false
}
